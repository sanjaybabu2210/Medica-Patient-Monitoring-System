						  <%= share.fromPlace %>
				  </div>
				</div>
					   <div style=" margin-top:-45px; padding-left:250px;float:left;">
						  <label  for= "to"><h5>To Location:</h5></label>
						  <div  id="to">
							  <%= share.toPlace %>
					  </div>
					</div>
		<div class="well">
  <div id="datetimepicker1" class="input-append date">
    <input data-format="dd/MM/yyyy hh:mm:ss" type="text">
    <span class="add-on">
      <i data-time-icon="icon-time" data-date-icon="icon-calendar">
      </i>
    </span>
  </div>
</div>
         
     
