<div style="margin-left:40px;" class="row ">
<% share.forEach(function(share){%>
	

	  
	  <div  class="card col-lg-4 "style="height:300px;max-width:450px;margin:15px;" >
		  
	  

		
      <div class="card-header">
        <h4 class="text-center font-weight-normal"><%=share.name%></h4>
      </div>
      <div class="card-body">
        <h5 class="card-title pricing-card-title"><i class="calendar alternate icon"></i><%= share.date %>    <span class="float-right"><i class=" clock icon"></i><%= share.time %></span></h5>
