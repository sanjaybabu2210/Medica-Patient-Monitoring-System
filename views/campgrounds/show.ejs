
<% include ../partials/header %>




	<div class="row">
		<div class="col-md-3">
			<p class="lead">
				<%=campground.adTitle %>
			</p>
			<div class=" p-10 border border-success rounded list group">
				<li class="list-group-item border-12">
					<P>
						DESCRIPTION:
					</P><%= campground.description %></li>
				<li class=" p-10 list-group-item">
					<p>
						Address:
					</p><%= campground.block %>-<%= campground.room %></li>
				<li class=" p-10 list-group-item">
					<p>
						Mobile No:
					</p><%= campground.phone %></li>
			</div>
		</div>
		<div class="col-md-7">
			<div class="card">
				<img  src="<%= campground.img1 %>">
				<div class="">
					<h4 class=" card-title  float-right">
						INR<%= campground.price1 %>
					</h4>
										<h4>
											<a> <%= campground.adTitle %></a>
					</h4>
					
						<p > <%= campground.description %> </p>
					<p><em>Submitted by: <a href="/users/<%= campground.author.id %>">,<%= campground.author.username %></a>, <%= moment(campground.createdAt).fromNow() %></em></p>
														<% if(currentUser && campground.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>
								<div>
									<div class="float-right">
					<a class="btn btn-success" href = "/campgrounds/<%= campground._id %>/comments/new">Add New Comment</a>
				</div>

									<a class="btn btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit

									</a>
									<form id="delete-form" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
									<button class="btn btn-danger">DELETE

										</button>			  
										
									</form>
						<% } %>
					</div>
				</div>
			</div>
			<div class="well">
				
				<hr>
				<% campground.comments.forEach(function(comment){ %>
				<div class="row">
					<div class="col-md-12">
						<strong><%= comment.author.username %></strong>
						<span class="float-right">10 days ago</span>
						<p><%= comment.text %></p>
						<a class="btn btn-xs btn-warning" href="/campgrounds/<%=campground._id %>/comments/<%=comment._id %>/edit">Edit</a>
					</div>
					
			</div>
						
						<% }) %>
			</div>
		</div>
	</div>








<% include ../partials/footer %>