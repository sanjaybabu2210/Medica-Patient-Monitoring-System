											    	<input name="campground[img5]" value="<%= campground.img5 %>" style="padding:60px 30px; margin:2px solid red; margin:20px;" type="text" class=" mani btn btn-secondary col-lg-3 form-control" id="adTitle" placeholder="Enter Mobile Number">
											    		<input name="campground[img6]" value="<%= campground.img6 %>"style="padding:60px 30px; margin:2px solid red; margin:20px;" type="text" class=" mani btn btn-secondary col-lg-3 form-control" id="adTitle" placeholder="Enter Mobile Number">
