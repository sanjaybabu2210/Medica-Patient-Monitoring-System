											    <i class="cart icon"></i>
											    For Rent(INR)
											  </a>
											  <input name="campground[price2]" value="<%= campground.price2 %>" type="number" min="1" step="1">
										</div>
									</div>	
						</div>
						<hr>
						<div class="form-group">
								<label required pattern="{10}" for="adTitle">Phone No*</label>
							    <input name="phone" value="<%= campground.phone %>" type="number" class="form-control" id="adTitle" placeholder="Enter Mobile Number">
						</div>
						<label required  for="photos">Photos </label>
								<div style="margin: 0px 60px 0px 100px " class="form-group">
										
